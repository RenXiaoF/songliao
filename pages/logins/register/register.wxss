/* pages/logins/register/register.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.login-wrap {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 15vh;
}



/* 手机号 */
.label-input {
  font-size: 28rpx;
  width: 680rpx;
  line-height: 90rpx;
  border-bottom: 1rpx #D7D7D7 solid;
}
.simple {
  font-size: 28rpx;
  width: 680rpx;
  line-height: 90rpx;
  border-bottom: 1rpx #D7D7D7 solid;
  position: relative;
  top: -7vh;
}

.label {
  box-sizing: border-box;
  float: left;
  padding: 0 25rpx;
}
.input {
  box-sizing: border-box;
  float: left;
  height: 90rpx;
  width: 500rpx;
  padding-right: 5rpx;
}
/* 验证码 */
.verify-box {
  font-size: 28rpx;
  width: 680rpx;
  line-height: 90rpx;
  position: relative;
  top: 2vh;
}
.verify-input {
  box-sizing: border-box;
  float: left;
  height: 90rpx;
  width: 400rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx #D7D7D7 solid;
}
.verify-btn {
  box-sizing: border-box;
  float: right;
  line-height: 90rpx;
  padding: 0 70rpx;
  background-color: #3880FF;
  color: white;
  border-radius: 10rpx;
  position: relative;
  top: -7.5vh;
  width: 42%;
}

.verify-btn1 {
  box-sizing: border-box;
  float: right;
  line-height: 90rpx;
  padding: 0 70rpx;
  background-color: rgb(86, 87, 88);
  color: white;
  border-radius: .5em;
  /* position: absolute; */
  position: relative;
  right: 2vw;
  top: -7.8vh;
  width: 42%;
}

.item {
  margin-bottom: 40rpx;
}

/* 注册并登陆 */
.login-btn {
  line-height: 85rpx;
  text-align: center;
  font-size: 35rpx;
  color: #fff;
  background-color: #3880FF;
  border-radius: .2rem;
  margin-top: 3vh;

}

  

/* 协议 */
.hetong {
  font-size: 25rpx;
  margin-top: 2vh;

}
