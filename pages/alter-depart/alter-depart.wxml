                    <text class="">部门名称:</text>
                    <input class="input" type="text" name="group_name" value="{{group_name}}" placeholder="请输入公司名称" />
                </view>
                <view class="text">
                    <text class="">上级部门:</text>
                    <input class="input" type="text" disabled="true"  value="{{store_name}}" placeholder="" />
